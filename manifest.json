{
  "name": "Reddit Bar",
  "description": "Create watchlist of subreddit",
  "version": "2.0",
  "permissions": [
    "notifications",
	"contextMenus",
	"tabs",
	"alarms",
	"cookies",
	"storage",
	"contentSettings",
	"http://*/*",
	"https://*/*"
  ],
  "background": {
   	"scripts": ["right.js","background.js"]
  },
  "browser_action": {
    "default_title": "Go to reddit!",
    "default_popup": "background.html"
  },
  "manifest_version": 2
}
